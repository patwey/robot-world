<div class='container'>
  <h1>Build a Robot</h1>

  <form action='/robots' method='post'>
    <label for="robotName">Name</label>
    <input type='text' name='robot[name]' class='robot-name' /><br/>

    <label for="robotCity">City</label>
    <input type='text' name='robot[city]' class='robot-city' /><br/>

    <label for="robotState">State</label>
    <input type='text' name='robot[state]' class='robot-state' /><br/>

    <label for="robotBirthdate">Birthdate</label>
    <input type='text' name='robot[birthdate]' class='robot-birthdate' /><br/>

    <label for="robotDateHired">Date Hired</label>
    <input type='text' name='robot[date_hired]' class='robot-date-hired' /><br/>

    <label for="robotDepartement">Department</label>
    <input type='text' name='robot[department]' class='robot-department' /><br/>
    <br/>
    <input type='submit' value='Submit' />
  </form>
</div>
